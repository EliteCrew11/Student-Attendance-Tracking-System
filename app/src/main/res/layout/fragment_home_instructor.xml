<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text_intstructorName"
        android:text="Instructor:"
        android:textColor="#514E4E"
        android:textStyle="normal"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Dr.Aziz Fellah"
        android:textStyle="bold"
        android:id="@+id/id_instructorName"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/text_intstructorName"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_instructorName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Email: "
        android:id="@+id/textEmail"
        android:textColor="#514E4E"
        android:textSize="@dimen/_16sdp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="afellah@nwmissouri.edu"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/id_instructorEmail"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/id_instructorName"
        app:layout_constraintLeft_toRightOf="@id/textEmail"
        android:layout_height="wrap_content"/>

  


</androidx.constraintlayout.widget.ConstraintLayout>